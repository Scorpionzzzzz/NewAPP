<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Calorie progress view -->
        <com.example.appdefault.Custom.CalorieProgressView
            android:id="@+id/calorieProgressView"
            android:layout_width="161dp"
            android:layout_height="159dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <!-- Macronutrient progress views -->
        <LinearLayout
            android:id="@+id/macronutrientProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/calorieProgressView"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <!-- Protein progress -->
            <com.example.appdefault.Custom.MacronutrientProgressView
                android:id="@+id/proteinProgressView"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />

            <!-- Carbs progress -->
            <com.example.appdefault.Custom.MacronutrientProgressView
                android:id="@+id/carbsProgressView"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />

            <!-- Fat progress -->
            <com.example.appdefault.Custom.MacronutrientProgressView
                android:id="@+id/fatProgressView"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <!-- Add other views here if needed -->

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
